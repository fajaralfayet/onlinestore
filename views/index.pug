extends layout

block content

  style.
    .item-wrap {
      color: #1f1f1f;
      text-decoration: none;
    }

    .item-wrap:hover {
      color: inherit;
    }

    .card {
      -webkit-transition: all 100ms ease-in-out;
      transition: all 100ms ease-in-out;
      border: none;
      -webkit-box-shadow: 0 1px 7px rgba(0,0,0,.05);
      box-shadow: 0 1px 7px rgba(0,0,0,.05);
    }
    .card-img-top {
      height: 290px
    } 

    .card:hover {
      transform: scale(1.04);
      border: none;
    }

    .carousel-item {
      position: relative;
    }
    .carousel-item img {
      z-index: 2;
      object-fit:cover;
      top: 0;
      left: 0;
      max-height: 600px;
    }
    
    .product-header__subtitle {
      font-size: 16px;
      max-width: 95%;
      font-weight: 500;
      font-style: italic;
      color: #9c9b9b;
    }
    
    .product-header__title {
      margin-bottom: 0.2em;
      font-size: 2rem;
      line-height: 1.15;
      color: #393939;
    }

    @media(max-width:1180px) {
     
    }
    @media(max-width:980px) {
      .card-img-top {
        height: 200px
      } 
    }

  section#hero
    .container-lg.overflow-hidden.mt-5
      #carouselExampleSlidesOnly.carousel.slide(data-bs-ride="carousel")
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100(src="https://images.unsplash.com/photo-1523585298601-d46ae038d7d3?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt="...")
          .carousel-item
            img.d-block.w-100(src="https://plus.unsplash.com/premium_photo-1681493944219-44118cf7754d?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt="...")
          .carousel-item
            img.d-block.w-100(src="https://images.unsplash.com/photo-1611510338559-2f463335092c?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt="...")
    section.mt-5#product
      .product-header.my-5
        .product-header__content
          .container
            h3.product-header__title.
              Our Product Catalog
            h5.product-header__subtitle.
              Your number #1 online source for authentic items and services.
      .row.justify-content-center.mb-5
        each item in data.product
          .col-6.col-lg-3.gap-3
              .card
                a(href=`/detail/${item.uuid}`, class="item-wrap")
                  .p-2
                    img.card-img-top.img-fluid(src=`${item.img}`,  alt="Responsive Image")
                  .card-body
                    h5.card-title=item.name
                    p.card-text=item.desc
                    .mt-1
                      p.m-0 Harga
                      h6.m-0= "Rp." +item.price
          