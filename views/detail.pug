extends layout

block content
  .container-fluid.overflow-hidden.mt-5
    .row.px-3
      .col-12.col-md-6
        #slider.owl-carousel.product-slider
          each item in data[0].images
            .item
              img(src=`${item.path}`)
        #thumb.owl-carousel.product-thumb
          each item in data[0].images
            .item
              img(src=`${item.path}`)
      .col-12.col-md-6
        .row.px-3
          .col-4
            a(href=`${data[0].link.tokped}`, target="_blank", rel="noopener noreferrer", style="text-decoration: none;")
              .card.e-icon.shadow-sm
                .card-body.d-flex.flex-column.justify-content-center.align-items-center
                  img(src="/images/icon/tokopedia.png")
