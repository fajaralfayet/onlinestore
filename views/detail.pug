            img(src="https://images.unsplash.com/photo-1636146049394-0924c2b66104?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D")
      .col-md-6
        .product-dtl
          .product-info
            .product-name
              h1(data-hook="product-title") Premium Plain Cotton Combed 24s Clothes
            .product-price-discount
              span Rp 180.000
              span.text-danger.line-through Rp 250.000
            .col-md-8.col-sm-12.buy-product.border.border-dark.mt-4
              .title
                h4.p-2 Buy :
              .link.mb-3
                a(href="http://", target="_blank", rel="noopener noreferrer")
                  img(src="/images/icon/blibli.png" style="height: 60px;")
                a(href="http://", target="_blank", rel="noopener noreferrer") 
                  img(src="/images/icon/shopee.png" style="height: 60px;")
                a(href="http://", target="_blank", rel="noopener noreferrer") 
                  img(src="/images/icon/tiktokshop.png" style="height: 60px;")
                a(href="http://", target="_blank", rel="noopener noreferrer") 
                  img(src="/images/icon/wa.png" style="height: 45px;")
            .tabs.mt-5 
              ul.nav.nav-tabs.mb-3#ex1(role="tablist")
                li.nav-item(role="presentation")
                  a.nav-link.active#ex1-tab-1(data-bs-toggle="tab", href="#ex1-tabs-1", role="tab", aria-controls="ex1-tabs-1", aria-selected="true") Product Info
                li.nav-item(role="presentation")
                  a.nav-link#ex1-tab-2(data-bs-toggle="tab", href="#ex1-tabs-2", role="tab", aria-controls="ex1-tabs-2", aria-selected="false") Sizing
              .tab-content#ex1-content
                .tab-pane.fade.show.active#ex1-tabs-1(role="tabpanel", aria-labelledby="ex1-tab-1")
                  p Shiny chrome & red web design with chrome studs.
                  p Full grain heavyweight leather.
                  p Made from scratch in Brooklyn NY.
        
                .tab-pane.fade#ex1-tabs-2(role="tabpanel", aria-labelledby="ex1-tab-2")
                  p Small / medium fits waist sizes 30-36"
                  p Large / X-Large fits waist sizes 33-39"